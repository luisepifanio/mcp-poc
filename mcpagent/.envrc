# FunciÃ³n para cargar variables de entorno desde un archivo
load_env_file() {
  if [ -f "$1" ]; then
    echo "Cargando variables de entorno desde $1"
    dotenv "$1" > /dev/null
  fi
}

# Intenta cargar los archivos en orden de prioridad
load_env_file  local.env || \
load_env_file .env || \
load_env_file .dev.vars 

